;#variables that we can use in different parts of the config file
[colors]
background = #00
background-alt = #3306080a
primary = #fff
alert = #f7768e

secondary = #e60053

foreground = #dfdfdf
foreground-alt = #e60053

[bar/main]
bottom = false 
monitor = HDMI-1

background = ${colors.background}

border-size = 00000000
border-color = #00000000

padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = FiraCode Nerd Font:size=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = i3 xwindow
modules-right = pulseaudio temperature cpu memory date 

